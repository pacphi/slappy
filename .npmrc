# Enforce pnpm usage
engine-strict=true

# Prevent npm from being used
# If someone tries to use npm, they'll get an error

# Allow build scripts for necessary packages
enable-pre-post-scripts=true

# Approve specific packages to run build scripts (one per line)
scripts-allow-list=@parcel/watcher
scripts-allow-list=esbuild
scripts-allow-list=puppeteer
scripts-allow-list=unrs-resolver
scripts-allow-list=vue-demi
